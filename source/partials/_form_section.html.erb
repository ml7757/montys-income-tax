<section class="form__section">
	<h2><%= data.contact.form.heading %></h2>
	<form name="contact" method="post" netlify-honeypot="bot-field" data-netlify="true" class="form__contact">
		<div class="form__container">
			<div class="form__group">
				<label for="name"><%= data.contact.form.label_1 %></label>
				<div class="form__field">
					<input type="text" name="name" id="name" required>
				</div>
			</div>
			<div class="form__group">
				<label for="email"><%= data.contact.form.label_2 %></label>
				<div class="form__field">
					<input type="email" name="email" id="email" required>
				</div>
			</div>
			<div class="form__group">
				<label for="phone"><%= data.contact.form.label_3 %></label>
				<div class="form__field">
					<input type="tel" name="phone" id="phone" required>
				</div>
			</div>
			<div class="form__group">
				<label><%= data.contact.form.label_4 %></label>
				<div class="form__field">
					<textarea name="message" rows="8" required></textarea>
				</div>
			</div>
			<div class="form__group hidden">
				<label>Robot spam field</label>
				<div class="form__field">
					<input name="bot-field">
				</div>
			</div>
			<div class="form__group submit">
				<label>&nbsp;</label>
				<div class="form__field">
					<input type="submit" value="Send" class="form__submit">
				</div>
			</div>
		</div>
	</form>
</section>
