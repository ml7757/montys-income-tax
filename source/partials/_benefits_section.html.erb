<section class="ben__section">
	<div class="ben__container">
		<figure class="ben__photo">
			<%= image_tag 'images/hero-index.jpg' %>
		</figure>
		<div class="ben__content">
			<h2 class="ben__heading">Benefits with you in Mind</h2>
			<div class="ben__list">
				<h3><%= data.home.benefit.one %></h3>
				<h3><%= data.home.benefit.two %></h3>
				<h3><%= data.home.benefit.three %></h3>
				<%= link_to data.home.benefit.cta_btn, "#", class: "btn btn-full why__btn" %>
			</div>
			<p class="ben__print"><%= data.home.benefit.fine_print %></p>
		</div>
	</div>
</section>
