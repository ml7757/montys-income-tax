<section class="team__section js-section-team">
	<div class="team__heading">
		<h2><%= data.about.team_main %></h2>
	</div>
	<div class="card__container">
		<% data.about.team.each do |t| %>
			<% t.member.each do |m| %>
				<div class="card__individual team">
					<%= image_tag t.img, alt: "Owner, operator, and partner, Lona", class: "team__img" %>
					<h3 class="card__heading team"><%= m.name %></h3>
					<% m.info.each do |i| %>
						<p class="card__para"><%= i.desc %></p>
					<% end %>
				</div>
			<% end %>
		<% end %>
	</div>
</section>
