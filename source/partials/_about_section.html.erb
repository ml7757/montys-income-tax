<section class="company__section js-section-experience">
	<div class="company__intro">
		<h2><%= data.about.about_main %></h2>
		<p class="gen__intro"><%= data.about.about_intro %></p>
	</div>
	<div class="card__container">
		<% data.about.about.each do |a| %>
			<% a.info.each do |i| %>
				<div class="card__individual company">
					<h3 class="card__heading"><%= a.heading %></h3>
					<p class="card__para"><%= i.intro %></p>
					<% i.list.each do |l| %>
						<ul class="card__list">
							<li><%= l.pt %></li>
						</ul>
					<% end %>
				</div>
			<% end %>
		<% end %>
	</div>
</section>
